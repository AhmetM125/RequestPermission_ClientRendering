@page "/departments"
@inherits RazorBaseComponent


<h5>Departments</h5>

<div class="row">
    <div class="col-10"></div>
    <div class="col-2 ">
        <div class="row justify-content-center">
            <button style="width:80%" class="btn btn-outline-danger">Insert Department</button>
        </div>
    </div>
</div>
<div class="row">
    <table class="table">
        <thead>
            <tr>
                <th>Department Id</th>
                <th>Department Name</th>
                <th>Is Active</th>
                <th>Total Employee</th>
            </tr>
        </thead>
        <tbody class="table table-striped">
            @if (DepartmentGridVMs is not null && DepartmentGridVMs.Any())
            {
                foreach (var item in DepartmentGridVMs)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>
                            @((MarkupString)(item.IsActive ? "<span>Active</span>" : "<span>Pasive</span>"))
                        </td>

                        <td>@item.TotalEmployee</td>
                    </tr>

                }
            }
        </tbody>
    </table>
</div>